{
    "Clearfix": {
        "prefix": "css-clearfix",
        "body": [
            ".${1:clearfix}::after {",
            "\tcontent: \"\";",
            "\tclear: both;",
            "\tdisplay: table;",
            "}"
        ],
        "description": "CSS Clearfix "
    },

    "Block": {
        "prefix": "css-style-block",
        "body": [
            "${1:selector} {",
            "\t$0",
            "}"
        ],
        "description": "Create a new css style block"
    },

    "BEM Class Selector": {
        "prefix": "bem-class-selector",
        "body": [
            ".${1:block}${2:__${3:element}}${4:--${5:modifier}}"
        ],
        "description": "BEM css class selector"
    }
}